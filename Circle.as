package {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	public class Circle extends Sprite {		private var textfield:TextField;		private var format:TextFormat;		private var wasRight:Boolean = true;		public var previousX:int = 1;		public var isBlue:Boolean;		public var inDoubleArea = false;		static var redScore:TextField;		static var blueScore:TextField;		public function Circle(v:int = 0) {			graphics.beginFill(0xff0000, 0.5);			graphics.drawCircle(0, 0, 20);			format = new TextFormat();			format.size = 22;			format.bold = true;			textfield = new TextField();			textfield.selectable = false;			textfield.x = -15;			textfield.y = -11;			textfield.width = 30;			textfield.height = 25;			textfield.maxChars = 2;			textfield.autoSize = TextFieldAutoSize.CENTER;			addChild(textfield);			previousX = this.x;			setValue(v);		}		public function setValue(v:int) {			textfield.text = v.toString();			textfield.setTextFormat(format);		}		public function getValue():int {			return int(textfield.text);		}		public function changeColor() {			if (wasRight) {				graphics.clear();				graphics.beginFill(0x0000ff, 0.5);			}			else {				graphics.clear();				graphics.beginFill(0xff0000, 0.5);			}			wasRight = ! wasRight;			graphics.drawCircle(0, 0, 20);			graphics.endFill();		}	}}